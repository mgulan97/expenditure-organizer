@model OrganizerProject.ViewModels.EditBudgetVM

@{
    ViewBag.Title = "Edytuj budżet";
}

<h2 style="text-align:center; font-family: Georgia; font-style:italic">Edytuj budżet</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal" style="text-align:center; font-family: Georgia; font-style:italic">
       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.budget.BudgetId)

        <div class="form-group">
            @Html.LabelFor(model => model.budget.Salary, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.budget.Salary, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.budget.Salary, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.budget.SalaryDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.budget.SalaryDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.budget.SalaryDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapisz" class="btn btn-info" style="background-color:#00a693; font-family: Georgia; font-style:italic" />
            </div>
        </div>
    </div>
}

<div style="font-family: Georgia; font-style:italic; font-size:16px">
    @Html.ActionLink("Lista budżetów", "List")
</div>
