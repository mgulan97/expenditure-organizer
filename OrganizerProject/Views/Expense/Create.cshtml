@model OrganizerProject.ViewModels.CreateExpenseVM

@{
    ViewBag.Title = "Dodaj wydatek";
}

<h2 style="text-align:center; font-family: Georgia; font-style:italic">Dodaj wydatek</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal" style="text-align:center; font-family: Georgia; font-style:italic">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.expense.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.expense.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.expense.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.expense.Type, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EnumDropDownListFor(model => model.expense.Type, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.expense.Type, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.expense.ReleaseDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.expense.ReleaseDate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.expense.ReleaseDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.expense.Cost, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.expense.Cost, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.expense.Cost, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.expense.Descriptions, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.expense.Descriptions, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.expense.Descriptions, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="margin-right:420px">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Dodaj wydatek" class="btn btn-info" style="background-color:#00a693;  style="text-align:center; font-family: Georgia; font-style:italic"" />
        </div>
    </div>
</div>
}

<div style="font-family: Georgia; font-style:italic; font-size:16px">
    @Html.ActionLink("Lista wydatków", "List", "Expense")
</div>
