@model OrganizerProject.ViewModels.EditUserVM

@{
    ViewBag.Title = "Edytuj dane";
}

<h2 style="text-align:center; font-family: Georgia; font-style:italic">Edytuj dane</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal" style="text-align:center; font-family: Georgia;  font-style:italic">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.user.UserId)

      
        <div class="form-group">
            @Html.LabelFor(model => model.user.Email, htmlAttributes: new { @class = "control-label col-md-2" })
