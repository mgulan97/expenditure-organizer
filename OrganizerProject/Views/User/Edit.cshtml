                @Html.EditorFor(model => model.user.Age, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.user.Age, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group" style="margin-right:375px">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapisz" class="btn btn-info" style="background-color:#00a693; font-family: Georgia; font-style:italic" />
            </div>
        </div>
    </div>
}

<div style="font-family: Georgia; font-style:italic; font-size:16px">
    @Html.ActionLink("Strona główna", "Index")
</div>

<div style="font-family: Georgia; font-style:italic; font-size:16px">
